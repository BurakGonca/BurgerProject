@model BurgerProject.Models.Account.UserViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-3">
            <br />
            <h3 class="title" style="color: black">Buradan bilgilerini güncelleyebilirsin</h3>
        </div>
    </div>
</section>



<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">

            <form asp-action="Edit" asp-controller="User" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" />


                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <hr />

                <div class="form-group">
                    <label for="currentPassword" class="control-label">Mevcut Şifre</label>
                    <input type="password" name="currentPassword" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="newPassword" class="control-label">Yeni Şifre</label>
                    <input type="password" name="newPassword" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="confirmNewPassword" class="control-label">Yeni Şifre Tekrar</label>
                    <input type="password" name="confirmNewPassword" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <hr />
            </form>
        </div>
    </div>
</div>